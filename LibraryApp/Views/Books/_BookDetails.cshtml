@model Book

<h4>Book</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Title)
    </dd>
    <dt class="col-sm-2">
        Authors
    </dt>
    <dd class="col-sm-10">
        <ul>
            @foreach (var bookAuthor in Model.BookAuthors)
            {
                <li><a asp-controller="Authors" asp-action="Details" asp-route-id="@bookAuthor.AuthorId">@bookAuthor.Author.FirstName @bookAuthor.Author.LastName</a></li>
            }
        </ul>
    </dd>
    <dt class="col-sm-2">
        Genres
    </dt>
    <dd class="col-sm-10">
        <ul>
            @foreach (var genre in Model.Genres)
            {
                <li><a asp-controller="Genres" asp-action="Details" asp-route-name="@genre.Genre.Name">@genre.Genre.Name</a></li>
            }
        </ul>
    </dd>
</dl>